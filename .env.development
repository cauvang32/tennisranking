# ðŸŽ¾ Tennis Ranking System - Development Environment
# This file contains development-specific settings
# Copy to .env and modify for your local development

# Database Configuration (PostgreSQL)
DB_NAME=tennis_ranking_dev
DB_USER=tennis_dev
DB_PASSWORD=dev_password_change_me
DB_HOST=localhost
DB_PORT=5432

# Admin Authentication (Development only)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=dev_admin_password
ADMIN_EMAIL=admin@localhost

# Security Secrets (Development only - generate new for production)
JWT_SECRET=dev_jwt_secret_32_characters_long_12345
CSRF_SECRET=dev_csrf_secret_32_characters_long_123

# Server Configuration
PORT=3001
NODE_ENV=development

# Rate Limiting Configuration (More lenient for development)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=10000
RATE_LIMIT_API_MAX=1000

# Disable rate limiting completely (supports both spellings)
DISABLE_RATE_LIMITING=false
# DISABLE_RATELIMITING=false

# Dynamic Rate Limiting (CPU/RAM pressure-based)
RATE_LIMIT_DYNAMIC_ENABLED=false
RATE_LIMIT_DYNAMIC_SAMPLE_MS=5000

RATE_LIMIT_CPU_HIGH_PCT=80
RATE_LIMIT_CPU_CRITICAL_PCT=95
RATE_LIMIT_RAM_HIGH_PCT=85
RATE_LIMIT_RAM_CRITICAL_PCT=95

RATE_LIMIT_DYNAMIC_SCALE_HIGH=0.7
RATE_LIMIT_DYNAMIC_SCALE_CRITICAL=0.4
RATE_LIMIT_DYNAMIC_MIN_SCALE=0.2

# CORS Settings (Development)
ALLOWED_ORIGINS=http://localhost:3001,http://127.0.0.1:3001

# WARNING: These are development settings only!
# For production, use strong secrets and remove this file from the server.
